<h1> Library </h1>
<table class="table table-striped table-hover" >
  <tr>
    <th> Cover </th>
    <th> Name </th>
    <th> Isbn </th>
    <th> Description </th>
    <th> Action </th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td> <%= image_tag(book.cover.url, class: "img-thumbnail", style: 'max-height: 80px;') %> </td>
      <td> <%= link_to book.title, book_path(book) %> </td>
      <td> <%= book.isbn  %> </td>
      <td> <%= book.description %> </td>
      <td>
        <%=link_to fa_icon("plus-circle"), new_book_path %>
        <%=link_to fa_icon("pencil-square-o"), edit_book_path(book) %>
        <%=link_to fa_icon("trash-o"), book_path(book), method: :delete, "data-confirm": 'Are you sure?' %>


      </td>
    </tr>
  <% end %>
</table>
